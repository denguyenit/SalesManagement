@model QuanLyCuaHang.Models.BAIVIET

@{
    ViewBag.Title = "Thêm bài viết mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Create","BAIVIET",FormMethod.Post,new { enctype = "multipart/form-data" }))
    {
    <div class="form-control">
        <div class="col-form-label">
            <label class="col-md-2 text-black">Tên danh mục bài viết: </label>
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.TenBV, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 text-black">Danh mục bài viết: </label>
            <div class="col-md-10">
                @Html.DropDownList("MaDMBV", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 text-black">Hình ảnh bài viết: </label>            
            <div class="col-md-10">
                @Html.TextBox("anh", "", new { type = "file" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 text-black">Chi tiết bài viết: </label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ChiTietBV, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-sn btn-success" />
            </div>
        </div>
    </div>
    }
    <div style="margin-top:20px">
        <a class="btn btn-primary" href="@Url.Action("Index","BAIVIET")" role="button">
            <span>
                <i class="fas fa-list"></i>
            </span> Danh sách bài viết
        </a>
    </div>

</div>

