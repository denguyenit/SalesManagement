<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/StyleSheet1.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-danger rounded" aria-label="Eleventh navbar example">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index","HomeAdmin")">
                    <img src="~/Image/logo.png" alt="" width="40" height="40" class="d-inline-block align-text-center">
                    <b style="font-size:x-large; color:white">D5-STORE</b>
                </a>                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarsExample09">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown09" data-bs-toggle="dropdown" aria-expanded="false">QUẢN LÝ BÀI VIẾT</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown09">
                                <li><a class="dropdown-item" href="@Url.Action("Index","DMBAIVIET")">Danh mục bài viết</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","BAIVIET")">Danh sách bài viết</a></li>
                            </ul>
                        </li>
                        <li class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown09" data-bs-toggle="dropdown" aria-expanded="false">QUẢN LÝ SẢN PHẨM</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown09">
                                <li><a class="dropdown-item" href="@Url.Action("Index","DMSANPHAM")">Danh mục sản phẩm</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index","SP")">Danh sách sản phẩm</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","DONHANG")">ĐƠN HÀNG</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","KHACHHANG")">KHÁCH HÀNG</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","QUANTRI")">QUẢN TRỊ</a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown">
                    <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                        <b style="font-size:20px; color:white">@Session["admin"]</b>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" href="">Đổi mật khẩu</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout","Default")">Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container" style="margin-top:10px">
        <div class="card border-danger mb-3">
            <div class="card-header bg-danger"><h5><b>@ViewBag.Title</b></h5></div>
            <div class="card-body text-danger">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
