@model QuanLyCuaHang.Models.DMBAIVIET

@{
    ViewBag.Title = "Cập nhật danh mục bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.MaDMBV)
        <div class="form-control">
            <div class="col-form-label">
                <label class="col-md-2 text-black">Tên danh mục bài viết: </label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.TenDMBV, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-sn btn-success" />
                </div>
            </div>
        </div>
    }
    <div style="margin-top:20px">
        <a class="btn btn-primary" href="@Url.Action("Index","DMBAIVIET")" role="button">
            <span>
                <i class="fas fa-list"></i>
            </span> Danh sách
        </a>
    </div>

</div>


