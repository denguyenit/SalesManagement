@model IEnumerable<QuanLyCuaHang.Models.SANPHAM>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-bottom:10px;">
    <div class="col-sm-12 text-end">
        <a class="btn btn-primary" href="@Url.Action("Create","SP")" role="button">
            <i class="fas fa-plus"></i>
            <span>
                <strong>Thêm sản phẩm mới</strong>
            </span>
        </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Giá 
                </th> 
                <th>
                    Hình ảnh sản phẩm
                </th>
                <th>
                    Số lượng tồn kho
                </th>
                <th>
                    Sản phẩm nổi bật
                </th>
                <th>
                    Danh mục sản phẩm
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaSP)
                </td>               
                <td>
                    <img class="card-img-bottom" src="~/@item.HinhAnhSP" alt="" style="height:100px;width:100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sanphamnoibat)
                </td>
                <td>
                    @foreach (var i in ViewBag.DMSANPHAMs)
                    {
                        if (i.MaDMSP == item.MaDMSP)
                        {
                            @i.TenDMSP
                        }
                    }
                </td>
                <td>
                    <a class="btn-sm btn-primary" href="@Url.Action("Edit","SP",new { id = item.MaSP })" role="button">
                        <i class="fas fa-edit"></i>
                    </a>   |
                    <a class="btn-sm btn-warning" href="@Url.Action("Delete","SP",new { id = item.MaSP })" role="button">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
